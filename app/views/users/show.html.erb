<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<h2>Posts</h2>
<% @user.posts.each do |post| %>
  <p>
    <strong>Commenter:</strong>
    <%= post.title %>
  </p>
 
  <p>
    <strong>Post:</strong>
    <%= post.text %>
  </p>
<% end %>

<h2>Add a post:</h2>
<%= form_for([@user, @user.posts.build]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
